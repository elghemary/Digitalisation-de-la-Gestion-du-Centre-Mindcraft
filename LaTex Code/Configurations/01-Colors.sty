%%% Document Colors (Blue Theme + Orange Chapters) %%%

% Base blue used everywhere else
\definecolor{baseBlue}{HTML}{1D438E}

% Main document color (links, accents)
\colorlet{maincolor}{baseBlue}

% --- New chapter color ---
\definecolor{chapterOrange}{HTML}{EB6029}

% Chapter enumeration colors (both styles)
\colorlet{chapterdarkred}{chapterOrange} % classic style
\colorlet{chaptergray}{chapterOrange}    % modern style

% Front page dark color
\colorlet{frontpagedark}{baseBlue!20!black}

% Block colors (monochrome blue theme)
\colorlet{note}{baseBlue}
\colorlet{tip}{baseBlue!40!white}
\colorlet{warning}{baseBlue!50!black}
\colorlet{todo}{baseBlue!30!black}
